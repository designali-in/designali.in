      "path": "example/components/dialogs/dialog-08.tsx",
      "content": "\"use client\";\n\nimport { useState } from \"react\";\nimport { CircleAlert } from \"lucide-react\";\n\nimport { Button } from \"@/components/ui/button\";\nimport {\n  Dialog,\n  DialogClose,\n  DialogContent,\n  DialogDescription,\n  DialogFooter,\n  DialogHeader,\n  DialogTitle,\n  DialogTrigger,\n} from \"@/components/ui/dialog\";\nimport { Input } from \"@/components/ui/input\";\nimport { Label } from \"@/components/ui/label\";\n\nconst PROJECT_NAME = \"Origin UI\";\n\nexport default function DialogDemo() {\n  const [inputValue, setInputValue] = useState(\"\");\n\n  return (\n    <Dialog>\n      <DialogTrigger asChild>\n        <Button variant=\"outline\">Delete project</Button>\n      </DialogTrigger>\n      <DialogContent>\n        <div className=\"flex flex-col items-center gap-2\">\n          <div\n            className=\"flex size-9 shrink-0 items-center justify-center rounded-full border border-border\"\n            aria-hidden=\"true\"\n          >\n            <CircleAlert className=\"opacity-80\" size={16} strokeWidth={2} />\n          </div>\n          <DialogHeader>\n            <DialogTitle className=\"sm:text-center\">\n              Final confirmation\n            </DialogTitle>\n            <DialogDescription className=\"sm:text-center\">\n              This action cannot be undone. To confirm, please enter the project\n              name <span className=\"text-foreground\">Origin UI</span>.\n            </DialogDescription>\n          </DialogHeader>\n        </div>\n\n        <form className=\"space-y-5\">\n          <div className=\"space-y-2\">\n            <Label htmlFor=\"project-name\">Project name</Label>\n            <Input\n              id=\"project-name\"\n              type=\"text\"\n              placeholder=\"Type Origin UI to confirm\"\n              value={inputValue}\n              onChange={(e) => setInputValue(e.target.value)}\n            />\n          </div>\n          <DialogFooter>\n            <DialogClose asChild>\n              <Button type=\"button\" variant=\"outline\" className=\"flex-1\">\n                Cancel\n              </Button>\n            </DialogClose>\n            <Button\n              type=\"button\"\n              className=\"flex-1\"\n              disabled={inputValue !== PROJECT_NAME}\n            >\n              Delete\n            </Button>\n          </DialogFooter>\n        </form>\n      </DialogContent>\n    </Dialog>\n  );\n}\n",
      "type": "registry:example",
      "target": ""
    }
  ]
